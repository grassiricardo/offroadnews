<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-8">
      <section class="recent_news_inner">
          <h3 class="category-headding ">BRASIL</h3>
          <div class="headding-border"></div>
          <div class="row">
            <div id="content-slide" class="owl-carousel">
              <% @news_brasil.each do |news_brasil| %>
                <div class="item home2-post effects">
                  <div class="post-wrapper wow fadeIn" data-wow-duration="1s">
                    <div class="post-thumb">
                      <a href="#">
                        <%if @news_brasil != nil%>
                          <%=image_tag(news_brasil.photo_capa.container_home.url,  class: 'img-responsive')%>
                        <%else%>
                          <%=image_tag('recent_news_01.jpg',  class: 'img-responsive')%>
                        <%end%>
                        <div class="overlay">
                          <a href="#" class="expand"><i class="fa fa-play"></i></a>
                          <a class="close-overlay hidden">x</a>
                        </div>
                      </a>
                    </div>
                  </div>
                  <h3><a href="#"><%=news_brasil.title%></a></h3>
                </div>
              <%end%>
            </div>
          </div>
          <div class="row rn_block">
            <% @news_brasil_details.each do |news_brasil| %>
              <div class="col-md-4 col-sm-4 padd">
                  <div class="home2-post">
                      <div class="post-wrapper wow fadeIn effects" data-wow-duration="1s">
                        <!-- image -->
                        <div class="post-thumb">
                          <a href="#">
                            <%if @news_brasil != nil%>
                              <%=image_tag(news_brasil.photo_capa.container_home_menor.url,  class: 'img-responsive')%>
                            <%else%>
                              <%=image_tag('recent_news_04.jpg',  class: 'img-responsive')%>
                            <%end%>
                            <div class="overlay">
                              <a href="#" class="expand"><i class="fa fa-play"></i></a>
                              <a class="close-overlay hidden">x</a>
                            </div>
                          </a>
                        </div>
                      </div>
                      <h4><a href="#"><%=news_brasil.title%></a></h4>
                  </div>
              </div>
            <%end%>
          </div>
      </section>
      <section class="politics_wrapper">
        <h3 class="category-headding ">MUNDO</h3>
        <div class="headding-border"></div>
        <div class="row">
          <div id="content-slide-2" class="owl-carousel">
            <!-- item-1 -->
            <div class="item">
              <div class="row">
                <!-- main post -->
                <div class="col-sm-6 col-md-6">
                  <% @news_mundo.each do |news_mundo| %>
                    <div class="post-wrapper wow fadeIn effects" data-wow-duration="2s">
                      <!-- post title -->
                      <h3><a href="#"><%=news_mundo.title%>.</a></h3>
                      <!-- post image -->
                      <div class="post-thumb">
                        <a href="#">
                          <%if @news_mundo != nil%>
                            <%=image_tag(news_mundo.photo_capa.container_home.url,  class: 'img-responsive')%>
                          <%else%>
                            <%=image_tag('politics_01.jpg',  class: 'img-responsive')%>
                          <%end%>
                          <div class="overlay">
                            <a href="#" class="expand"><i class="fa fa-play"></i></a>
                            <a class="close-overlay hidden">x</a>
                          </div>
                        </a>
                      </div>
                      <div class="post-title-author-details">
                        <div class="post-editor-date">
                          <!-- post date -->
                          <div class="post-date">
                            <i class="pe-7s-clock"></i> <%=news_mundo.created_at.strftime("%d/%m/%Y")%>
                          </div>
                          <!-- post comment -->
                          <div class="post-author-comment"><i class="pe-7s-comment"></i> 13 </div>
                        </div>
                      </div>
                    </div>
                  <%end%>
                </div>
                  <!-- right side post -->
                  <div class="col-sm-6 col-md-6">
                    <div class="row rn_block">
                      <% @news_mundo_details.each do |news_mundo| %>
                        <div class="col-xs-6 col-md-6 col-sm-6 post-padding">
                          <div class="home2-post effects">
                            <!-- post image -->
                            <div class="post-thumb wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s">
                              <a href="#">
                                <%if @news_mundo != nil%>
                                  <%=image_tag(news_mundo.photo_capa.container_home_menor.url,  class: 'img-responsive')%>
                                <%else%>
                                  <%=image_tag('politics_03.jpg',  class: 'img-responsive')%>
                                <%end%>
                                <div class="overlay">
                                  <a href="#" class="expand"><i class="fa fa-play"></i></a>
                                  <a class="close-overlay hidden">x</a>
                                </div>
                              </a>
                            </div>
                            <div class="post-title-author-details">
                              <!-- post image -->
                              <h5><a href="#"><%=news_mundo.title%></a></h5>
                            </div>
                          </div>
                        </div>
                      <%end%>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
      </section>
      <div class="ads">
        <a href="#">
          <%=image_tag('top-bannner2.jpg',  class: 'img-responsive center-block')%>
        </a>
      </div>
    </div>
    <!-- /.left content inner -->
    <div class="col-md-4 col-sm-4 left-padding">
        <!-- right content wrapper -->
        <div class="input-group search-area">
            <!-- search area -->
            <input type="text" class="form-control" placeholder="Search articles here ..." name="q">
            <div class="input-group-btn">
                <button class="btn btn-search" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </div>
        </div>
        <!-- /.search area -->
        <!-- social icon -->
        <h3 class="category-headding ">SOCIAL</h3>
        <div class="headding-border"></div>
        <div class="social">
          <ul>
            <li><a href="https://www.facebook.com/grassiricardo/" class="facebook"><i class="fa  fa-facebook"></i><span>75</span> </a></li>
          </ul>
        </div>
        <!-- /.social icon -->
        <div class="banner-add">
            <!-- add -->
            <span class="add-title">- Advertisement -</span>
            <a href="#">
              <!-- <%=image_tag('ad-banner.jpg',  class: 'img-responsive center-block')%> -->
            </a>
        </div>
        <%= render 'shared/related-news'%>
    </div>
  </div>
</div>
